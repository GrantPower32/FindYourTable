<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_rest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bodega_logo"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_restName"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView_rest"
        android:layout_toEndOf="@+id/imageView_rest" />

    <TextView
        android:id="@+id/textViw_restRating"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textView_restName"
        android:layout_alignStart="@+id/textView_restName"
        android:layout_marginTop="21dp" />
</RelativeLayout>